//codespace with vite
{
  "name": "Portfolio (React + Vite + Tailwind)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "postCreateCommand": "bash -lc 'if [ -f package.json ]; then npm ci; fi'",
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": { "label": "Vite Dev Server", "requireLocalPort": true }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "remoteUser": "node"
}
